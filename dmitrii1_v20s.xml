<script type="text/javascript">
    var prefs = new gadgets.Prefs();
    var addr = prefs.getString("serverAddr");

    var ENDPOINT = addr;
	var INTERVAL = 20 * 1000; // minutes * seconds * 1000 milliseconds
	var ROTATE_INTERVAL = 20 * 1000; // seconds * 1000 milliseconds

	var LINEAR_HORNO_ID = 0;
	var LINEAR_DATA = [];
	var LINEAR_DATA_IDX = 0;
	var timeoutId = -1;

    function getFile(filename, action) {
        setInfo("getting file " + filename);
        var xhr = new XMLHttpRequest();
        xhr.open("GET", ENDPOINT + "/" + filename, true);
        xhr.onload = function (e) {
        if (xhr.readyState === 4) {
            if (xhr.status === 200) {
            action(xhr.responseText);
            } else {
            console.error(xhr.statusText);
            }
        }
        };
        xhr.onerror = function (e) {
        console.error(xhr.statusText);
        };
        xhr.send(null);
    }

    function processPlantData(data) {
		setInfo("processPlantData");
        var array = data.split(/\r?\n/);
        if (array.length >= 4) {
            var fechaField = document.getElementById("fecha-field");
            fechaField.innerText = array[1];

            var diaField = document.getElementById("dia-field");
            diaField.innerText = array[2];

            var acumuladoField = document.getElementById("acumulado-field");
            acumuladoField.innerText = array[3];
        }
    };

    function processLinearData(data) {
		var START = 2;
		LINEAR_DATA = [];
		var array = data.trim ().split(/\r?\n/);
		for (var i = START; i < array.length; i += 3) {
			LINEAR_DATA.push(array.slice(i,i+3));
		}
		clearInterval(timeoutId);
		displayLinearData();
		timeoutId = setInterval(displayLinearData, ROTATE_INTERVAL);
    };

	function displayLinearData() {
		try {
			var hornoIdField = document.getElementById("horno-label");

			var indexField = document.getElementById("index-field-1");
			var leftField = document.getElementById("data-field-left-1");
			var rightField = document.getElementById("data-field-right-1");
			indexField.innerText = "";
			leftField.innerText = "";
			rightField.innerText = "";

			indexField.innerText = LINEAR_DATA[LINEAR_DATA_IDX][0];
			leftField.innerText = LINEAR_DATA[LINEAR_DATA_IDX][1];
			rightField.innerText = LINEAR_DATA[LINEAR_DATA_IDX][2];

			hornoIdField.innerText = "Horno " + Math.floor(LINEAR_DATA[LINEAR_DATA_IDX][0]/10);
		
			indexField = document.getElementById("index-field-2");
			leftField = document.getElementById("data-field-left-2");
			rightField = document.getElementById("data-field-right-2");
			indexField.innerText = "";
			leftField.innerText = "";
			rightField.innerText = "";

			indexField.innerText = LINEAR_DATA[LINEAR_DATA_IDX + 1][0];
			leftField.innerText = LINEAR_DATA[LINEAR_DATA_IDX + 1][1];
			rightField.innerText = LINEAR_DATA[LINEAR_DATA_IDX + 1][2];
		
			indexField = document.getElementById("index-field-3");
			leftField = document.getElementById("data-field-left-3");
			rightField = document.getElementById("data-field-right-3");
			indexField.innerText = "";
			leftField.innerText = "";
			rightField.innerText = "";

			indexField.innerText = LINEAR_DATA[LINEAR_DATA_IDX + 2][0];
			leftField.innerText = LINEAR_DATA[LINEAR_DATA_IDX + 2][1];
			rightField.innerText = LINEAR_DATA[LINEAR_DATA_IDX + 2][2];
		
			LINEAR_DATA_IDX+=3;			
		} catch (e) {
			LINEAR_DATA_IDX = 0;
		}
		
	}

    function init() {
		setInfo("init gadget " + ENDPOINT);
		
		getFile("datosplanta.txt", processPlantData);
		setInterval(function() { getFile("datosplanta.txt", processPlantData) }, INTERVAL);
		
		getFile("datoslineas.txt", processLinearData);
		setInterval(function() { getFile("datoslineas.txt", processLinearData) }, INTERVAL);
    }
		  
    gadgets.util.registerOnLoadHandler(init);

    function setInfo(data) {
		var debug = false;
		if (debug) {
			var container = $('#infoContainer');
			container.append(data + '<br>');
		}	
		if (debug) {
			console.log(data);
		}
	}
</script>]]>
